{
  "tasks": {
    "build:all": "deno task build:colors && deno task build:web",
    "build:colors": "deno run -A src/colors/build.ts",
    "build:web": "deno run -A src/web/build.ts"
  },
  "imports": {
    "colors": "./dist/colors/colors.ts"
  },
  "fmt": {
    "singleQuote": true
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "jsr:@mary/jsx"
  }
}
